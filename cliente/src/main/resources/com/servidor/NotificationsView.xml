<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.servidor.Controller.NotificationsController" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #67b99a;">
    
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15" style="-fx-background-color: #67b99a; -fx-padding: 20;">
        <Text text="Notificaciones" style="-fx-font-family: 'Courier New'; -fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #ffffff;"/>
        
        <HBox spacing="20" alignment="CENTER">
            <VBox spacing="10">
                <Text text="Solicitudes" style="-fx-font-family: 'Courier New'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #ffffff;"/>
                <ListView fx:id="solicitudesListView" prefWidth="250" prefHeight="300" style="-fx-background-color: #def1ea; -fx-text-fill: #827b7b; -fx-font-family: 'Courier New'; -fx-font-size: 14px;"/>
            </VBox>
            <VBox spacing="10">
                <Text text="Mensajes" style="-fx-font-family: 'Courier New'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #ffffff;"/>
                <ListView fx:id="mensajesListView" prefWidth="250" prefHeight="300" style="-fx-background-color: #def1ea; -fx-text-fill: #827b7b; -fx-font-family: 'Courier New'; -fx-font-size: 14px;"/>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>